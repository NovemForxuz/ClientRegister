<?xml version="1.0" encoding="utf-8"?>
<android.support.constraint.ConstraintLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:id="@+id/fragment_photo"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    tools:layout_editor_absoluteY="73dp">

    <TextView
        android:id="@+id/tab3_title"
        android:layout_width="wrap_content"
        android:layout_height="48dp"
        android:layout_marginBottom="16dp"
        android:gravity="center"
        android:text="TAKE A PHOTO"
        android:textSize="18sp"
        app:layout_constraintBottom_toTopOf="@+id/clientImg"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toTopOf="parent" />

    <ImageView
        android:id="@+id/clientImg"
        android:layout_width="0dp"
        android:layout_height="0dp"
        android:layout_marginBottom="16dp"
        android:layout_marginStart="133dp"
        android:visibility="visible"
        app:layout_constraintBottom_toBottomOf="parent"
        app:layout_constraintEnd_toStartOf="@+id/linearLayout4"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toBottomOf="@+id/tab3_title"
        app:srcCompat="@drawable/take_your_pic" />

    <LinearLayout
        android:id="@+id/linearLayout4"
        android:layout_width="136dp"
        android:layout_height="0dp"
        android:layout_marginBottom="27dp"
        android:layout_marginEnd="3dp"
        android:layout_marginTop="22dp"
        android:gravity="center"
        android:orientation="vertical"
        app:layout_constraintBottom_toBottomOf="parent"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintStart_toEndOf="@+id/clientImg"
        app:layout_constraintTop_toTopOf="@+id/clientImg">

        <Button
            android:id="@+id/photo_btn"
            android:layout_width="match_parent"
            android:layout_height="66dp"
            android:text="Take photo"
            tools:layout_editor_absoluteX="443dp"
            tools:layout_editor_absoluteY="111dp" />

        <Button
            android:id="@+id/photo_next_btn"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:text="next"
            android:visibility="gone"
            tools:layout_editor_absoluteX="466dp"
            tools:layout_editor_absoluteY="185dp" />
    </LinearLayout>

</android.support.constraint.ConstraintLayout>